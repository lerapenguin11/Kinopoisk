<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="350dp"
    android:background="@color/background"
    android:paddingTop="20dp"
    android:paddingEnd="25dp">

    <androidx.cardview.widget.CardView
        android:id="@+id/cardView"
        android:layout_width="160dp"
        android:layout_height="250dp"
        android:backgroundTint="@color/background"
        app:cardCornerRadius="15dp"
        app:cardPreventCornerOverlap="false"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.cardview.widget.CardView
            android:layout_width="160dp"
            android:layout_height="250dp"
            app:cardCornerRadius="15dp"
            app:cardPreventCornerOverlap="false">

            <ImageView
                android:layout_width="180dp"
                android:layout_height="250dp"
                android:scaleType="fitXY"
                app:srcCompat="@drawable/defolt_poster" />
        </androidx.cardview.widget.CardView>


    </androidx.cardview.widget.CardView>


    <TextView
        android:id="@+id/tv_name_movies"
        style="@style/HeadingMoviesText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="5dp"
        app:layout_constraintStart_toStartOf="@+id/cardView"
        app:layout_constraintTop_toBottomOf="@+id/cardView"
        tools:text="Офис"/>

    <TextView
        android:id="@+id/tv_genre"
        style="@style/GenreText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        app:layout_constraintStart_toStartOf="@+id/tv_name_movies"
        app:layout_constraintTop_toBottomOf="@+id/tv_name_movies"
        tools:text="Комедия" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        app:layout_constraintStart_toStartOf="@+id/tv_genre"
        app:layout_constraintTop_toBottomOf="@+id/tv_genre"
        app:srcCompat="@drawable/star" />

    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        style="@style/GenreText"
        android:layout_marginStart="5dp"
        app:layout_constraintBottom_toBottomOf="@+id/imageView"
        app:layout_constraintStart_toEndOf="@+id/imageView"
        app:layout_constraintTop_toTopOf="@+id/imageView"
        tools:text="7.8" />
</androidx.constraintlayout.widget.ConstraintLayout>