<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Kinopoisk" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/red</item>
        <item name="colorPrimaryVariant">@color/white</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="TitleTextMax" parent="TextAppearance.AppCompat">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/text_accent</item>
        <item name="fontFamily">@font/merriweather_black</item>
    </style>

    <style name="DescriptionText" parent="TextAppearance.AppCompat">
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">@color/accent_light</item>
        <item name="android:textStyle">bold</item>
        <item name="fontFamily">@font/roboto_mono</item>
    </style>

    <style name="HeadingText" parent="TextAppearance.AppCompat">
        <item name="android:fontFamily">@font/merriweather_black</item>
        <item name="android:textColor">@color/text_accent</item>
        <item name="android:textSize">18sp</item>
        <item name="android:layout_marginTop">24dp</item>
    </style>


    <style name="ButtonAll" parent="TextAppearance.AppCompat">
        <item name="android:fontFamily">@font/mulish</item>
        <item name="android:textColor">#AAA9B1</item>
        <item name="android:textSize">10sp</item>
    </style>
    
    <style name="Theme.Kinopoisk.NoActionBarAndStatusBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowLightStatusBar">true</item>
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:windowTranslucentNavigation">false</item>
        <item name="android:fitsSystemWindows">true</item>
    </style>
    
    <style name="TextCardMovies" parent="TextAppearance.AppCompat">
        <item name="fontFamily">@font/mulish_bold</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">15sp</item>
    </style>

    <style name="EstimationIMDB" parent="TextAppearance.AppCompat">
        <item name="android:fontFamily">@font/mulish</item>
        <item name="android:textColor">#9C9C9C</item>
        <item name="android:textSize">9sp</item>
    </style>

    <style name="TextTeg" parent="TextAppearance.AppCompat">
        <item name="android:fontFamily">@font/mulish_bold</item>
        <item name="android:textColor">#88A4E8</item>
        <item name="android:textSize">8sp</item>
        <item name="android:textAllCaps">true</item>
    </style>

    <style name="TextBlackMin" parent="TextAppearance.AppCompat">
        <item name="android:fontFamily">@font/mulish</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="TextFilterMovies" parent="TextAppearance.AppCompat">
        <item name="fontFamily">@font/mulish_bold</item>
        <item name="android:textColor">#88A4E8</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="TextCardMoviesBlack" parent="TextAppearance.AppCompat">
        <item name="fontFamily">@font/mulish</item>
        <item name="android:textColor">#AAA9B1</item>
        <item name="android:textSize">12sp</item>
    </style>
</resources>